{
  "expo": {
    "name": "Happy",
    "slug": "Happy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#18BDCD"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier" : "com.johncode.happy"
    },
    "android": {
      "package": "com.johncode.happy"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
